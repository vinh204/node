extends ../../layouts/default.pug

block main 
    h1 Danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            each item, index in filterStatus
                button(
                    class=`btn btn-sm btn-outline-success me-1 ${item.class}`
                    button-status= item.status
                ) #{item.name}
    .card.mb-3
        .card-header Danh sách
            .card-body
                table.table.table-hover.table-sm
                    thead 
                        tr 
                            th STT 
                            th Hình ảnh 
                            th Tiêu đề
                            th Giá
                            th Trạng thái 
                            th Hành động
                    tbody
                        each item, index in products
                            tr 
                                td #{index + 1}
                                td 
                                    img(
                                        src= item.thumbnail
                                        alt= item.title
                                        width="80px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    if(item.status == "active")
                                        a(href="#" class="badge bg-success text-decoration-none") Hoạt động
                                    else 
                                        a(href="#" class="badge bg-danger text-decoration-none") Dừng hoạt động
                                td       
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm ms-1") Xóa     